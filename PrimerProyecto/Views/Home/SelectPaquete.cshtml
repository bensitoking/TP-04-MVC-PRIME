@{
    ViewData["Title"] = "SelectPaquete";
}
<link rel="stylesheet" href="~/css/site.css"/>

<body>
<h2> Armar Paquete </h2>
<form method="post" action='@Url.Action("GuardarPaquete")'>
<p> Seleccione el numero de destino </p>
@for(int i = 0 ; i < ViewBag.ListaDestinos.Count; i++){
    <p> @(i+1) - @ViewBag.ListaDestinos[i] </p>
}
<input type="number" name= "Destino" requiered max= "10" min ="1" />

<p> Seleccione el numero de hotel</p>

@for(int i = 0 ; i < ViewBag.ListaHoteles.Count; i++){
<p> @(i+1) - @ViewBag.ListaHoteles[i] </p>
}
<input type="number" name= "Hotel" requiered max= "10" min ="1" />

<p> Seleccione el numero de aereo</p>

@for(int i = 0 ; i < ViewBag.ListaAereos.Count; i++){
<p> @(i+1) - <img src="~/img/@ViewBag.ListaAereos[i]" alt="aereos"></p>
}
<input type="number" name= "Aereo" requiered max= "10" min ="1" />

<p> Seleccione el numero de excursion</p>

@for(int i = 0 ; i < ViewBag.ListaExcursiones.Count; i++){
<p> @(i+1) - <img src="~/img/@ViewBag.ListaExcursiones[i]" alt="excursiones"> </p>
}
<input type="number" name= "Excursion" requiered max= "10" min ="1" />
<br>
<input type ="submit" value="Guardar Paquete" >
</form>
</body>