@{
    ViewData["Title"] = "SelectPaquete";
}
<link rel="stylesheet" href="~/css/site.css" />

<body>
    @ViewBag.MensajeError
    <h2> Armar Paquete </h2>
    <form method="post" action='@Url.Action("GuardarPaquete")'>
        <label for="Destino"> Seleccione el número de destino </label>
        @for (int i = 0; i < ViewBag.ListaDestinos.Count; i++)
        {
            <p> @(i + 1) - @ViewBag.ListaDestinos[i] </p>
        }
        <input type="number" name="Destino" required max="10" min="1" />

        <label for="Hotel"> Seleccione el número de hotel </label>

        @for (int i = 0; i < ViewBag.ListaHoteles.Count; i++)
        {
            <p> @(i + 1) - @ViewBag.ListaHoteles[i] </p>
        }
        <input type="number" name="Hotel" required max="5" min="1" />

        <label for="Aereo"> Seleccione el número de aéreo </label>

        @for (int i = 0; i < ViewBag.ListaAereos.Count; i++)
        {
            <p> @(i + 1) - <img src="~/img/@ViewBag.ListaAereos[i]" alt="aereos"></p>
        }
        <input type="number" name="Aereo" required max="5" min="1" />

        <label for="Excursion"> Seleccione el número de excursion </label>

        @for (int i = 0; i < ViewBag.ListaExcursiones.Count; i++)
        {
            <p> @(i + 1) - <img src="~/img/@ViewBag.ListaExcursiones[i]" alt="excursiones"> </p>
        }
        <input type="number" name="Excursion" required max="5" min="1" />
        <br>
        <input type="submit" value="Guardar Paquete">
    </form>
</body>