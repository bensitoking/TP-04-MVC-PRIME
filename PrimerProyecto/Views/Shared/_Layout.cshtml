<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav>
            <ul>
                <li>
                    <img src="~/img/Logo.png" alt="Logo Empresa" class="Logo">
                </li>
                <div class="menu">
                    <li>
                        <a href = '@Url.Action("Index")' alt = "Inicio">Inicio</a>
                    </li>
                    <li>
                        <a href = '@Url.Action("SelectPaquete")' alt = "Armar tu paquete">Armar paquete</a>
                    </li>
                </div>
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - OrtWorld
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
